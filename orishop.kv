##:kivy!

<Manager>:
    Menu:
        name: 'main_menu'
    Admin:
        name: 'admin'
    Signin:
        name: 'signin'
    Login:
        name: 'login'

<Menu>:
    box: box_shop
    BoxLayout:
        spacing: 10
        canvas:
            Color:
                rgba: 0.1, 0.1, 0.1, 0.1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'OriShop'
                ActionButton:
                    text: 'Admin'
                    on_release: app.root.current = 'admin'
                ActionButton:
                    text: 'Login'
                    on_release: app.root.current = 'login'
                ActionButton:
                    id: signin_button
                    text: 'Signin'
                    on_release: app.root.current = 'signin'
                ActionButton:
                    text: 'Exit'
                    on_release: app.stop()
        ScrollView:
            BoxLayout:
                id: box_shop
                spacing: '10dp'
                size_hint_y: None
                height: self.minimum_height

<Admin>:
    name: product_name
    price: product_price

    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 0.5, 0.5, 0.5, 1
            Rectangle:
                pos: self.pos
                size: self.size
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Admin'
                    on_release: app.root.current = 'main_menu'
                ActionButton:
                    text: 'Exit'
                    on_release: app.stop()
        BoxLayout:
            orientation: 'vertical'
            padding: 100
            Label:
                text: 'Welcome Admin Screen'
                font_size: 50
            BoxLayout:
                spacing: 20
                Label:
                    text: 'Product name:'
                    size_hint: None, None
                    height: 35
                TextInput:
                    id: product_name
                    size_hint_y: None
                    height: '30sp'
            BoxLayout:
                spacing: 20
                Label:
                    text: 'Product Price:'
                    size_hint: None, None
                    height: 30
                TextInput:
                    id: product_price
                    size_hint_y: None
                    height: '30sp'
            Button:
                text: '+'
                size_hint: None, None
                on_release: root.addProducts()

                height: '40sp'
                width: 80

<Signin>:
    seller: user_name

    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 0.5, 0.5, 0.5, 1
            Rectangle:
                pos: self.pos
                size: self.size
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Signin'
                    on_release: app.root.current = 'main_menu'
                ActionButton:
                    text: 'Exit'
                    on_release: app.stop()
        BoxLayout:
            orientation: 'vertical'
            padding: 100
            Label:
                text: 'Welcome to Ori Shop'
                font_size: 50
            BoxLayout:
                Label:
                    text: 'Full Name:'
                TextInput:
                    id: user_name
                    size_hint_y: None
                    height: '30sp'
            BoxLayout:
                Label:
                    text: 'Age:'
                TextInput:
                    id: user_age
            BoxLayout:
                Label:
                    text: 'Email:'
                TextInput:
                    id: user_email
            BoxLayout:
                Label:
                    text: 'Password:'
                TextInput:
                    id: user_password
        Button:
            text: 'Signin'
            on_release: app.root.current = 'main_menu'
            on_release: app.root.get_screen('main_menu').ids.signin_button.text = root.ids.user_name.text
            # Fazer o botão de Logar (ou cadastrar) ficar com o nome do usuário
            # on_release: app.root.get_screen('main_menu').ids.sign_button.text = 'orion'
<Login>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Login'
                    on_release: app.root.current = 'main_menu'
                ActionButton:
                    text: 'Exit'
                    on_release: app.stop()
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Login'

<Products>:
    orientation: 'vertical'
    spacing: 5
    size_hint: None, None
    height: 300
    width: 200
    id: id
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id: product_seller_card
        font_size: 15
    Label:
        id: product_name_card
        font_size: 40
    BoxLayout:
        spacing: 10
        orientation: 'vertical'
        Label:
            id: product_price_card
            font_size: 20
        Button:
            text: 'Buy'
            size_hint: None, None
            width: 200
            height: 40