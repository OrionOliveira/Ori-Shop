##:kivy!
<Manager>:
    Menu:
        id: mn
        name: 'main_menu'
    User:
        name: 'user'
    Signin:
        id: sgn
        name: 'signin'
    Login:
        name: 'login'

<Menu>:
    _telaprodutos: box_shop
    BoxLayout:
        spacing: 10
        canvas:
            Color:
                id: menu_color
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'OriShop'
                    on_release: root.novoproduto()
                ActionButton:
                    id: login_button
                    text: 'Login'
                    on_release:
                        if root.ids.login_button.text == 'Login': app.root.current = 'login'
                        elif root.ids.login_button.text != 'Login': app.root.current = 'user'
                ActionButton:
                    id: signin_button
                    text: 'Signin'
                    on_press:
                        root.resignin()
                ActionButton:
                    text: 'Exit'
                    on_release: app.stop()
        ScrollView:
            BoxLayout:
                id: box_shop
                spacing: '10dp'
                size_hint_y: None
                height: self.minimum_height

<User>:
    _nomeproduto: produto
    _precoproduto: preço

    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 0.5, 0.5, 0.5, 1
            Rectangle:
                pos: self.pos
                size: self.size
        ActionBar:
            ActionView:
                ActionPrevious:
                    id: adm_name
                    title: 'User'
                    on_release: app.root.current = 'main_menu'
                ActionButton:
                    text: 'Exit'
                    on_release: app.stop()
        BoxLayout:
            orientation: 'vertical'
            padding: 100
            Label:
                text: 'Welcome back'
                font_size: 50
            BoxLayout:
                spacing: 20
                Label:
                    text: 'Product name:'
                    size_hint: None, None
                    height: 35
                TextInput:
                    id: produto
                    size_hint_y: None
                    height: '30sp'
            BoxLayout:
                spacing: 20
                Label:
                    text: 'Product Price:'
                    size_hint: None, None
                    height: 30
                TextInput:
                    id: preço
                    size_hint_y: None
                    height: '30sp'
            Button:
                text: '+'
                size_hint: None, None
                on_press: root.addProducts()
                height: '40sp'
                width: 80

<Signin>:
    _name: user_name
    _age: user_age
    _email: user_email
    _password: user_password
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 0.5, 0.5, 0.5, 1
            Rectangle:
                pos: self.pos
                size: self.size
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Signin'
                    on_release: app.root.current = 'main_menu'
                ActionButton:
                    text: 'Exit'
                    on_release: app.stop()
        BoxLayout:
            orientation: 'vertical'
            padding: '20sp'
            spacing: 20
            Label:
                text: 'Welcome to Ori Shop'
                font_size: 50
            BoxLayout:
                spacing: 15
                Label:
                    text: 'Name:'
                    size_hint: None, None
                    height: '35sp'
                    width: '90sp'
                TextInput:
                    id: user_name
                    size_hint: None, None
                    width: '455sp'
                    height: '30sp'
            BoxLayout:
                spacing: 15
                Label:
                    text: 'Age:'
                    size_hint: None, None
                    height: '35sp'
                    width: '90sp'
                TextInput:
                    id: user_age
                    size_hint: None, None
                    width: '455sp'
                    height: '30sp'
            BoxLayout:
                spacing: 15
                Label:
                    text: 'Email:'
                    size_hint: None, None
                    height: '35sp'
                    width: '90sp'
                TextInput:
                    id: user_email
                    size_hint: None, None
                    width: '455sp'
                    height: '30sp'
            BoxLayout:
                spacing: 20
                Label:
                    text: 'Password:'
                    size_hint: None, None
                    height: '35sp'
                    width: '95sp'
                TextInput:
                    id: user_password
                    size_hint: None, None
                    width: '450sp'
                    height: '30sp'
        Button:
            size_hint: None, None
            width: '300dp'
            text: 'Signin'
            on_press:
                root.signin()

<Login>:
    email: email_login
    password: password_login

    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Login'
                    on_release: app.root.current = 'main_menu'
                ActionButton:
                    text: 'Exit'
                    on_release: app.stop()
        BoxLayout:
            orientation: 'vertical'
            padding: '30sp'
            spacing: -90
            Label:
                text: 'Login'
                font_size: 60
            BoxLayout:
                spacing: 15
                Label:
                    text: 'Email:'
                    size_hint: None, None
                    height: '35sp'
                    width: '90sp'
                TextInput:
                    id: email_login
                    size_hint: None, None
                    width: '455sp'
                    height: '30sp'
            BoxLayout:
                spacing: 15
                Label:
                    text: 'Password:'
                    size_hint: None, None
                    height: '35sp'
                    width: '95sp'
                TextInput:
                    id: password_login
                    size_hint: None, None
                    width: '450sp'
                    height: '30sp'
        Button:
            text: 'Login'
            size_hint: None, None
            width: '200sp'
            on_release: root.logar()


<Products>:
    orientation: 'vertical'
    spacing: 5
    size_hint: None, None
    height: 300
    width: 200
    id: id
    canvas:
        Color:
            rgba: 0.4, 0.4, 0.4, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id: product_seller_card
        font_size: 15
    Label:
        id: product_name_card
        font_size: 40
    BoxLayout:
        spacing: 10
        orientation: 'vertical'
        Label:
            id: product_price_card
            font_size: 20
        Button:
            text: 'Buy'
            size_hint: None, None
            width: 200
            height: 40
            on_release: app.root.ids.mn._telaprodutos.remove_widget(root)